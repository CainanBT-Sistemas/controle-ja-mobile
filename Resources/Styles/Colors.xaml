<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#00E676</Color>
    <Color x:Key="PrimaryDark">#00A854</Color>
    <Color x:Key="PrimaryLight">#66FFA6</Color>

    <Color x:Key="Secondary">#6C63FF</Color>
    <Color x:Key="SecondaryDark">#403BC9</Color>

    <Color x:Key="Tertiary">#FF9100</Color>

    <Color x:Key="Success">#00E676</Color>
    <Color x:Key="Error">#FF5252</Color>
    <Color x:Key="Warning">#FFC107</Color>

    <Color x:Key="PageBackgroundColorLight">#F0F2F5</Color>
    <Color x:Key="PageBackgroundColorDark">#0F172A</Color>

    <Color x:Key="CardBackgroundLight">#FFFFFF</Color>
    <Color x:Key="CardBackgroundDark">#1E293B</Color>

    <Color x:Key="TextPrimaryLight">#1E293B</Color>
    <Color x:Key="TextSecondaryLight">#64748B</Color>

    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#94A3B8</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="#00E676"/>
    <SolidColorBrush x:Key="CardDarkBrush" Color="#1E293B"/>

</ResourceDictionary>