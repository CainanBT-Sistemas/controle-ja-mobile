<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="controle_ja_mobile.Views.Privates.SettingsPage"
             Title="Configurações"
             BackgroundColor="{StaticResource PageBackgroundColorDark}">

    <Grid>
        <!-- Barra de Navegação Superior -->
        <Grid HeightRequest="60" VerticalOptions="Start" BackgroundColor="#1E293B" Padding="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" WidthRequest="40" HeightRequest="40">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Grid.GestureRecognizers>
                <Path Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z" 
                      Fill="White" 
                      Aspect="Uniform" 
                      HeightRequest="24" 
                      WidthRequest="24"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
            </Grid>

            <Label Grid.Column="1"
                   Text="Configurações"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   Margin="15,0,0,0"/>
        </Grid>

        <!-- Conteúdo da Página -->
        <ScrollView Margin="0,60,0,0">
            <VerticalStackLayout Padding="20" Spacing="15">

                <!-- Seção: Conta -->
                <Label Text="Conta" 
                       TextColor="{StaticResource Primary}" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5"/>

                <Border BackgroundColor="{StaticResource CardBackgroundDark}" 
                        StrokeThickness="0" 
                        StrokeShape="RoundRectangle 10" 
                        Padding="0">
                    <VerticalStackLayout>
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnProfileClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Perfil do Usuário" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#334155" Margin="15,0"/>

                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSecurityClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Segurança" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Seção: Preferências -->
                <Label Text="Preferências" 
                       TextColor="{StaticResource Primary}" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       Margin="0,20,0,5"/>

                <Border BackgroundColor="{StaticResource CardBackgroundDark}" 
                        StrokeThickness="0" 
                        StrokeShape="RoundRectangle 10" 
                        Padding="0">
                    <VerticalStackLayout>
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNotificationsClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Notificações" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#334155" Margin="15,0"/>

                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThemeClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M20 8.69V4h-4.69L12 .69 8.69 4H4v4.69L.69 12 4 15.31V20h4.69L12 23.31 15.31 20H20v-4.69L23.31 12 20 8.69zM12 18c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm0-10c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Tema" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Seção: Sobre -->
                <Label Text="Sobre" 
                       TextColor="{StaticResource Primary}" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       Margin="0,20,0,5"/>

                <Border BackgroundColor="{StaticResource CardBackgroundDark}" 
                        StrokeThickness="0" 
                        StrokeShape="RoundRectangle 10" 
                        Padding="0">
                    <VerticalStackLayout>
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHelpClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M11 18h2v-2h-2v2zm1-16C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-2.21 0-4 1.79-4 4h2c0-1.1.9-2 2-2s2 .9 2 2c0 2-3 1.75-3 5h2c0-2.25 3-2.5 3-5 0-2.21-1.79-4-4-4z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Ajuda e Suporte" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#334155" Margin="15,0"/>

                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAboutClicked"/>
                            </Grid.GestureRecognizers>
                            <Path Grid.Column="0" 
                                  Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" 
                                  Fill="{StaticResource Primary}" 
                                  Aspect="Uniform" 
                                  HeightRequest="24" 
                                  WidthRequest="24"
                                  VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="Sobre o App" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   VerticalOptions="Center" 
                                   Margin="15,0,0,0"/>
                            <Path Grid.Column="2" 
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z" 
                                  Fill="#64748B" 
                                  Aspect="Uniform" 
                                  HeightRequest="20" 
                                  WidthRequest="20"
                                  VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Botão Sair -->
                <Button Text="Sair da Conta"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        FontAttributes="Bold"
                        Margin="0,30,0,20"
                        Clicked="OnLogoutClicked"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <!-- Versão do App -->
                <Label Text="Versão 1.0.0"
                       TextColor="#64748B"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,10,0,20"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
