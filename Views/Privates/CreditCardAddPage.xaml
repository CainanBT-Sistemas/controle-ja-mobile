<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:controle_ja_mobile.ViewModels"
             x:Class="controle_ja_mobile.Views.Privates.CreditCardAddPage"
             x:DataType="vm:CreditCardsViewModel"
             Title="Novo Cartão"
             BackgroundColor="{StaticResource PageBackgroundColorDark}">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Dados do Cartão" TextColor="{StaticResource Primary}" FontSize="18" FontAttributes="Bold"/>

            <Border BackgroundColor="{StaticResource CardBackgroundDark}" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="15,5">
                <Entry Placeholder="Nome (ex: Nubank)" 
                       Text="{Binding NewCardName}" 
                       TextColor="White" 
                       PlaceholderColor="#64748B"/>
            </Border>

            <Label Text="Limite Total" TextColor="{StaticResource TextSecondaryDark}" FontSize="14" Margin="0,5,0,0"/>
            <Border BackgroundColor="{StaticResource CardBackgroundDark}" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="15,5">
                <Entry Placeholder="R$ 0,00" 
                       Keyboard="Numeric" 
                       Text="{Binding NewCardLimit}" 
                       TextColor="White" 
                       PlaceholderColor="#64748B"/>
            </Border>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">

                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Dia Fechamento" TextColor="{StaticResource TextSecondaryDark}" FontSize="12"/>
                    <Border BackgroundColor="{StaticResource CardBackgroundDark}" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="15,5">
                        <Entry Placeholder="Dia (1-31)" 
                               Keyboard="Numeric" 
                               Text="{Binding NewCardCloseDay}" 
                               TextColor="White" 
                               HorizontalTextAlignment="Center"
                               PlaceholderColor="#64748B"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Dia Vencimento" TextColor="{StaticResource TextSecondaryDark}" FontSize="12"/>
                    <Border BackgroundColor="{StaticResource CardBackgroundDark}" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="15,5">
                        <Entry Placeholder="Dia (1-31)" 
                               Keyboard="Numeric" 
                               Text="{Binding NewCardBestDay}" 
                               TextColor="White" 
                               HorizontalTextAlignment="Center"
                               PlaceholderColor="#64748B"/>
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <Button Text="SALVAR CARTÃO" 
                    Command="{Binding SaveCardCommand}"
                    Margin="0,30,0,0"
                    HeightRequest="55"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="Black"/>

            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               IsVisible="{Binding IsLoading}" 
                               Color="{StaticResource Primary}"
                               HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>