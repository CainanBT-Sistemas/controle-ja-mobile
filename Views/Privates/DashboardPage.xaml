<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:controle_ja_mobile.ViewModels"
             xmlns:components="clr-namespace:controle_ja_mobile.Views.Components"
             x:Class="controle_ja_mobile.Views.Privates.DashboardPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0F172A">

    <Grid RowDefinitions="Auto, *">
        <components:DynamicToolbar x:Name="MyToolbar" Grid.Row="0" />

        <CarouselView x:Name="MainCarousel"
                      Grid.Row="1"
                      Loop="False"
                      IsSwipeEnabled="True"
                      IndicatorView="Indicator"
                      PositionChanged="OnPositionChanged"
                      VerticalOptions="Fill" 
                      HorizontalOptions="Fill">

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ContentView Content="{Binding .}" VerticalOptions="Fill" HorizontalOptions="Fill"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>

        </CarouselView>

        <Grid Grid.Row="1" VerticalOptions="End">
            <components:BottomMenu x:Name="MyBottomMenu" />
        </Grid>

        <IndicatorView x:Name="Indicator" IsVisible="False" />
    </Grid>
</ContentPage>
