<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:controle_ja_mobile.ViewModels"
             x:Class="controle_ja_mobile.Views.Publics.RegisterPage"
             x:DataType="vm:RegisterViewModel"
             NavigationPage.HasNavigationBar="False"
             Title="Criar Conta">

    <ContentPage.Background>
        <RadialGradientBrush Center="0.5, 0.2" Radius="0.8">
            <GradientStop Color="#1E293B" Offset="0.0" />
            <GradientStop Color="#0F172A" Offset="0.4" />
            <GradientStop Color="#002118" Offset="1.0" />
        </RadialGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Grid BackgroundColor="#CC000000" 
              IsVisible="{Binding IsLoading}" 
              ZIndex="99">
            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               Color="{StaticResource Primary}" 
                               VerticalOptions="Center" 
                               HorizontalOptions="Center"/>
        </Grid>

        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

                <Image Source="logo_controle.png" 
                       HeightRequest="80" 
                       Aspect="AspectFit" 
                       Margin="0,0,0,10"/>

                <Label Text="Crie sua conta" 
                       TextColor="{StaticResource TextPrimaryDark}" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Preencha os dados abaixo para comeÃ§ar."
                       TextColor="{StaticResource TextSecondaryDark}"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       Margin="0,-10,0,10"/>

                <Border Stroke="{StaticResource TextSecondaryDark}" StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource CardBackgroundDark}"
                        Padding="15,2">
                    <Entry Placeholder="Nome Completo" 
                           Text="{Binding Name}"
                           TextColor="{StaticResource TextPrimaryDark}"
                           PlaceholderColor="{StaticResource TextSecondaryDark}"/>
                </Border>

                <Border Stroke="{StaticResource TextSecondaryDark}" StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource CardBackgroundDark}"
                        Padding="15,2">
                    <Entry Placeholder="Seu melhor e-mail" 
                           Text="{Binding Email}"
                           Keyboard="Email"
                           TextColor="{StaticResource TextPrimaryDark}"
                           PlaceholderColor="{StaticResource TextSecondaryDark}"/>
                </Border>

                <Border Stroke="{StaticResource TextSecondaryDark}" StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource CardBackgroundDark}"
                        Padding="15,2">
                    <Entry Placeholder="Crie uma senha" 
                           Text="{Binding Password}"
                           IsPassword="True"
                           TextColor="{StaticResource TextPrimaryDark}"
                           PlaceholderColor="{StaticResource TextSecondaryDark}"/>
                </Border>

                <Border Stroke="{StaticResource TextSecondaryDark}" StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource CardBackgroundDark}"
                        Padding="15,2">
                    <Entry Placeholder="Confirme a senha" 
                           Text="{Binding ConfirmPassword}"
                           IsPassword="True"
                           TextColor="{StaticResource TextPrimaryDark}"
                           PlaceholderColor="{StaticResource TextSecondaryDark}"/>
                </Border>

                <Button Text="CADASTRAR"
                        Command="{Binding RegisterCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="#000000"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,10,0,0"/>

                <Button Text="Voltar para Login"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextSecondaryDark}"
                        FontSize="14"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>