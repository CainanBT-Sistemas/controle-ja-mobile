<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="controle_ja_mobile.Views.Publics.WelcomePage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <RadialGradientBrush Center="0.5, 0.2" Radius="0.8">
            <GradientStop Color="#1E293B" Offset="0.0" />
            <GradientStop Color="#0F172A" Offset="0.4" />
            <GradientStop Color="#002118" Offset="1.0" />
        </RadialGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*, Auto">

        <Grid x:Name="LoadingOverlay"
              IsVisible="False"
              Grid.RowSpan="2"
              ZIndex="99"
              BackgroundColor="#CC000000">

            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <ActivityIndicator IsRunning="True" Color="{StaticResource Primary}" HeightRequest="50" WidthRequest="50"/>
                <Label Text="Conectando..." TextColor="White" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Spacing="15" Padding="30">
            <Grid HeightRequest="240" WidthRequest="240" HorizontalOptions="Center">
                <Ellipse WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="Center" Opacity="0.6">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                            <GradientStop Color="{StaticResource Primary}" Offset="0" />
                            <GradientStop Color="Transparent" Offset="1" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Image Source="logo_controle.png" HeightRequest="150" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

            <Label Text="ASSUMA O CONTROLE" TextColor="{StaticResource TextPrimaryDark}" FontSize="28" FontAttributes="Bold" CharacterSpacing="1.2" HorizontalTextAlignment="Center"/>
            <Label Text="GestÃ£o financeira inteligente e controle veicular." TextColor="{StaticResource TextSecondaryDark}" FontSize="16" HorizontalTextAlignment="Center" Opacity="0.8" Margin="0,5,0,0"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="15" Padding="30,0,30,50">

            <Border StrokeThickness="0" StrokeShape="RoundRectangle 8" BackgroundColor="#DB4437" HeightRequest="55">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGoogleLoginClicked"/>
                </Border.GestureRecognizers>
                <Border.Shadow>
                    <Shadow Brush="#DB4437" Offset="0,4" Radius="8" Opacity="0.4"/>
                </Border.Shadow>

                <Grid ColumnDefinitions="55, *">

                    <Image Grid.Column="0"
                           Source="google_white_logo.png" 
                           Aspect="AspectFit"
                           HeightRequest="26"
                           WidthRequest="26"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>

                    <Label Grid.Column="1" 
                           Text="ENTRAR COM GOOGLE" 
                           TextColor="White" 
                           FontAttributes="Bold" 
                           FontSize="15" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           Padding="0,0,25,0"/>
                </Grid>
            </Border>

            <Button Text="ENTRAR COM E-MAIL"
                    Clicked="OnLoginClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="{StaticResource TextSecondaryDark}"
                    BorderWidth="1"
                    CornerRadius="8"
                    HeightRequest="55"
                    FontSize="15"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>