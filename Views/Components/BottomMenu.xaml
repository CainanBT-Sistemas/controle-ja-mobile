<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="controle_ja_mobile.Views.Components.BottomMenu">

    <Grid VerticalOptions="End" HeightRequest="100" InputTransparent="False">

        <Path Fill="#1E293B" StrokeThickness="0" Aspect="Fill" VerticalOptions="End" HeightRequest="80" HorizontalOptions="Fill">
            <Path.Data>
                <GeometryGroup>
                    <PathGeometry Figures="M 0,20 L 0,80 L 400,80 L 400,20 L 260,20 C 260,20 250,20 240,30 C 230,45 220,55 200,55 C 180,55 170,45 160,30 C 150,20 140,20 140,20 Z"/>
                </GeometryGroup>
            </Path.Data>
            <Path.Shadow>
                <Shadow Brush="Black" Offset="0,-2" Radius="10" Opacity="0.2"/>
            </Path.Shadow>
        </Path>

        <Grid ColumnDefinitions="*,*,80,*,*" Padding="0,20,0,0" VerticalOptions="End" HeightRequest="80">
            <Grid Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHomeClicked"/>
                </Grid.GestureRecognizers>
                <Path x:Name="PathHome" Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" Fill="#64748B" Aspect="Uniform" HeightRequest="24" WidthRequest="24"/>
                <Label x:Name="LblHome" Text="Início" TextColor="#64748B" FontSize="10" FontAttributes="Bold" Margin="0,30,0,0" HorizontalOptions="Center"/>
            </Grid>

            <Grid Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCardsClicked"/>
                </Grid.GestureRecognizers>
                <Path x:Name="PathCards" Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z" Fill="#64748B" Aspect="Uniform" HeightRequest="24" WidthRequest="24"/>
                <Label x:Name="LblCards" Text="Cartões" TextColor="#64748B" FontSize="10" Margin="0,30,0,0" HorizontalOptions="Center"/>
            </Grid>

            <Grid Grid.Column="2" />

            <Grid Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnVehiclesClicked"/>
                </Grid.GestureRecognizers>
                <Path x:Name="PathVehicles" Data="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" Fill="#64748B" Aspect="Uniform" HeightRequest="24" WidthRequest="24"/>
                <Label x:Name="LblVehicles" Text="Veículos" TextColor="#64748B" FontSize="10" Margin="0,30,0,0" HorizontalOptions="Center"/>
            </Grid>

            <Grid Grid.Column="4" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsClicked"/>
                </Grid.GestureRecognizers>
                <Path x:Name="PathSettings" Data="M12,12c2.21,0,4-1.79,4-4s-1.79-4-4-4S8,5.79,8,8S9.79,12,12,12z M12,14c-2.67,0-8,1.34-8,4v2h16v-2C20,15.34,14.67,14,12,14z" Fill="#64748B" Aspect="Uniform" HeightRequest="24" WidthRequest="24"/>
                <Label x:Name="LblSettings" Text="Perfil" TextColor="#64748B" FontSize="10" Margin="0,30,0,0" HorizontalOptions="Center"/>
            </Grid>
        </Grid>

        <Grid VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,35" InputTransparent="True" CascadeInputTransparent="False">

            <Button x:Name="BtnIncome" Clicked="OnNewIncomeClicked" BackgroundColor="#00E676" HeightRequest="50" WidthRequest="50" CornerRadius="25" Opacity="0" InputTransparent="True"/>
            <Path x:Name="IconIncome" Data="M12,4l-1.41,1.41L15.17,10H4v2h11.17l-4.58,4.59L12,18l8-8L12,4z" Fill="#003300" Aspect="Uniform" HeightRequest="20" WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Center" Rotation="-90" Opacity="0" InputTransparent="True"/>

            <Button x:Name="BtnExpense" Clicked="OnNewExpenseClicked" BackgroundColor="#FF5252" HeightRequest="50" WidthRequest="50" CornerRadius="25" Opacity="0" InputTransparent="True"/>
            <Path x:Name="IconExpense" Data="M12,4l-1.41,1.41L15.17,10H4v2h11.17l-4.58,4.59L12,18l8-8L12,4z" Fill="White" Aspect="Uniform" HeightRequest="20" WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Center" Rotation="90" Opacity="0" InputTransparent="True"/>

            <Button x:Name="FabButton" Clicked="OnFabClicked" BackgroundColor="{StaticResource Primary}" CornerRadius="30" HeightRequest="60" WidthRequest="60" Margin="0,0,0,10"/>
            <Path Data="M19,13h-6v6h-2v-6H5v-2h6V5h2v6h6V13z" Fill="#003300" Aspect="Uniform" HeightRequest="24" WidthRequest="24" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" Margin="0,0,0,10"/>
        </Grid>

    </Grid>
</ContentView>